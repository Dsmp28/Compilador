#Imagen que se usar치 para la construcci칩n de la imagen de la aplicaci칩n front-end
#Se usa la versi칩n 20.17 de node en alpine3.20
FROM node:20.17-alpine3.20 AS builder
WORKDIR /app

#Copy [Origen] [Destino]
COPY package*.json ./

RUN npm install

COPY . .

RUN npm run build

FROM nginx:alpine

COPY --from=builder /app/dist /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]